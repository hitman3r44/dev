	function isIE(){  

    var strBrwsr = navigator.userAgent.toLowerCase();  
    if(strBrwsr.indexOf("msie") > -1 && strBrwsr.indexOf("mac") < 0){   
        return true;  
    }
    else
    {    
        return false;  
    }
}
